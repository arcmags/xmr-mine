# Maintainer: Chris Magyar <c.magyar.ec@gmail.com>
pkgname=haven
pkgver=2.0.0
pkgrel=1
pkgdesc="Haven: cryptonote currency daemon and wallet"
arch=('x86_64' 'i686' 'armv7h' 'aarch64')
url="https://github.com/havenprotocol/$pkgname"
license=('custom:Cryptonote')
depends=('boost-libs' 'unbound' 'miniupnpc' 'libunwind' 'openssl' 'readline' 'zeromq')
conflicts=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/$pkgver.tar.gz")
md5sums=('c590fa268e5fefd2ec65562b4bc73e65')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make release
}

package() {
	cd "${pkgname}-${pkgver}"
    install -Dm644 "./utils/conf/monerod.conf" \
        "${pkgdir}/etc/havend.conf"
    install -Dm755 "./build/release/bin/haven-blockchain-export" \
        "${pkgdir}/usr/bin/haven-blockchain-export"
    install -Dm755 "./build/release/bin/haven-blockchain-import" \
        "${pkgdir}/usr/bin/haven-blockchain-import"
    install -Dm755 "./build/release/bin/haven-gen-trusted-multisig" \
        "${pkgdir}/usr/bin/haven-gen-trusted-multisig"
    install -Dm755 "./build/release/bin/haven-wallet-cli" \
        "${pkgdir}/usr/bin/haven-wallet-cli"
    install -Dm755 "./build/release/bin/haven-wallet-rpc" \
        "${pkgdir}/usr/bin/haven-wallet-rpc"
    install -Dm755 "./build/release/bin/havend" \
        "${pkgdir}/usr/bin/havend"
}
