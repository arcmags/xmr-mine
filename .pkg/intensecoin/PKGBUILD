# Maintainer: Chris Magyar <c.magyar.ec@gmail.com>
pkgname=intensecoin
pkgver=2.0.0
pkgrel=1
pkgdesc="Intenscoin: cryptonote currency daemon, wallet, and miner"
arch=('x86_64' 'i686' 'armv7h' 'aarch64')
url="https://github.com/valiant1x/$pkgname"
license=('custom:Cryptonote')
depends=('boost-libs' 'unbound' 'miniupnpc' 'libunwind' 'openssl' 'readline' 'zeromq')
conflicts=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
md5sums=('f1d5a6ca3bcd2c5f9b9f6a8fe72cdf72')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make release
}

package() {
	cd "${pkgname}-${pkgver}"
    install -Dm644 "./utils/conf/intensecoind.conf" \
        "${pkgdir}/etc/intensecoind.conf"
    install -Dm755 "./build/release/bin/intense-blockchain-export" \
        "${pkgdir}/usr/bin/intense-blockchain-export"
    install -Dm755 "./build/release/bin/intense-blockchain-import" \
        "${pkgdir}/usr/bin/intense-blockchain-import"
    install -Dm755 "./build/release/bin/intense-wallet-cli" \
        "${pkgdir}/usr/bin/intense-wallet-cli"
    install -Dm755 "./build/release/bin/intense-wallet-rpc" \
        "${pkgdir}/usr/bin/intense-wallet-rpc"
    install -Dm755 "./build/release/bin/intensecoind" \
        "${pkgdir}/usr/bin/intensecoind"
}
