# Maintainer: Chris Magyar <c.magyar.ec@gmail.com>
pkgname=masari
pkgver=0.1.4.0
pkgrel=1
pkgdesc="Masari: cryptonote currency daemon, wallet, and miner"
arch=('x86_64' 'i686' 'armv7h' 'aarch64')
url="https://github.com/masari-project/$pkgname"
license=('custom:Cryptonote')
depends=('boost-libs' 'unbound' 'miniupnpc' 'libunwind' 'openssl' 'readline' 'zeromq')
conflicts=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
md5sums=('0f75dbe49c0967a50645ac25e7c171d8')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make release
}

package() {
	cd "${pkgname}-${pkgver}"
    install -Dm644 "./utils/conf/masarid.conf" \
        "${pkgdir}/etc/masarid.conf"
    install -Dm755 "./build/release/bin/masari-blockchain-export" \
        "${pkgdir}/usr/bin/masari-blockchain-export"
    install -Dm755 "./build/release/bin/masari-blockchain-import" \
        "${pkgdir}/usr/bin/masari-blockchain-import"
    install -Dm755 "./build/release/bin/masari-wallet-cli" \
        "${pkgdir}/usr/bin/masari-wallet-cli"
    install -Dm755 "./build/release/bin/masari-wallet-rpc" \
        "${pkgdir}/usr/bin/masari-wallet-rpc"
    install -Dm755 "./build/release/bin/masarid" \
        "${pkgdir}/usr/bin/masarid"
}
