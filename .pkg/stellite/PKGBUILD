# Maintainer: Chris Magyar <c.magyar.ec@gmail.com>
pkgname=stellite
_pkgname=Stellite
pkgver=1.2.3.2
pkgrel=1
pkgdesc="Stellite: cryptonote currency daemon, wallet, and miner"
arch=('x86_64' 'i686' 'armv7h' 'aarch64')
url="https://github.com/stellitecoin/${_pkgname}"
license=('custom:Cryptonote')
depends=('boost-libs' 'unbound' 'miniupnpc' 'libunwind' 'openssl' 'readline' 'zeromq')
conflicts=()
source=("${_pkgname}-$pkgver.tar.gz::$url/archive/$pkgver.tar.gz")
md5sums=('212a960ea375df8368603c9b7ac801f5')

build() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    make release
}

package() {
	cd "${_pkgname}-${pkgver}"
    install -Dm755 "./build/release/bin/stellite-blockchain-export" \
        "${pkgdir}/usr/bin/stellite-blockchain-export"
    install -Dm755 "./build/release/bin/stellite-blockchain-import" \
        "${pkgdir}/usr/bin/stellite-blockchain-import"
    install -Dm755 "./build/release/bin/stellite-wallet-cli" \
        "${pkgdir}/usr/bin/stellite-wallet-cli"
    install -Dm755 "./build/release/bin/stellite-wallet-rpc" \
        "${pkgdir}/usr/bin/stellite-wallet-rpc"
    install -Dm755 "./build/release/bin/stellited" \
        "${pkgdir}/usr/bin/stellited"
}
