# Maintainer: Chris Magyar <c.magyar.ec@gmail.com>

pkgname=electroneum
pkgver=2.0.0.0
pkgrel=1
pkgdesc='Electroneum: cryptonote currency daemon and wallet'
arch=('x86_64' 'i686')
url="https://github.com/electroneum/$pkgname"
license=('custom:Cryptonote')
makedepends=( 'boost' 'cmake' 'git' )
depends=( 'boost-libs' 'libunwind' 'miniupnpc' 'openssl' 'readline'
    'unbound' 'zeromq' )
optdepends=( 'doxygen: documentation'
    'expat: XML parsing'
    'graphviz: documentation'
    'ldns: SSL toolkit' )
checkdepends=('gtest')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
md5sums=('fe217198ccc7da73de264262327321b3')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir build && cd build
    cmake ..
    make
}

package() {
	cd "${pkgname}-${pkgver}"
    install -Dm755 "./build/bin/electroneum-blockchain-export" \
        "${pkgdir}/usr/bin/electroneum-blockchain-export"
    install -Dm755 "./build/bin/electroneum-blockchain-import" \
        "${pkgdir}/usr/bin/electroneum-blockchain-import"
    install -Dm755 "./build/bin/electroneum-wallet-cli" \
        "${pkgdir}/usr/bin/electroneum-wallet-cli"
    install -Dm755 "./build/bin/electroneum-wallet-rpc" \
        "${pkgdir}/usr/bin/electroneum-wallet-rpc"
    install -Dm755 "./build/bin/electroneumd" \
        "${pkgdir}/usr/bin/electroneumd"
    install -Dm644 "./utils/conf/electroneumd.conf" \
        "${pkgdir}/etc/electroneumd.conf"
    install -Dm644  LICENSE \
        "${pkgdir}/usr/share/licenses/$pkgname/LICENSE"
}
