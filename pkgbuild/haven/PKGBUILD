# Maintainer: Chris Magyar <c.magyar.ec@gmail.com>

pkgname=haven
pkgver=3.1.0
_gituser=havenprotocol
_gitrepo=haven
_gitver=3.1.0
pkgrel=1
pkgdesc="Haven: cryptonote currency daemon and wallet"
arch=('x86_64' 'i686')
url="https://github.com/$_gituser/$_gitrepo"
license=('custom:Cryptonote')
makedepends=( 'boost' 'cmake' 'git' )
depends=( 'boost-libs' 'libunwind' 'miniupnpc' 'openssl' 'readline'
    'unbound' 'zeromq' )
optdepends=( 'doxygen: documentation'
    'expat: XML parsing'
    'graphviz: documentation'
    'ldns: SSL toolkit' )
checkdepends=('gtest')
source=("$pkgname-$pkgver.tar.gz::$url/archive/$_gitver.tar.gz")
md5sums=('4ff022c2d16f970be24a4aaebd5a9ed1')

prepare() {
    if [ ! -d "$srcdir/$pkgname-$pkgver" ]; then
        if [ -d "$srcdir/$_gitrepo-$_gitver" ]; then
            mv "$srcdir/$_gitrepo-$_gitver" "$srcdir/$pkgname-$pkgver"
        elif [ -d "$srcdir/$pkgname-$_gitver" ]; then
            mv "$srcdir/$pkgname-$_gitver" "$srcdir/$pkgname-$pkgver"
        fi
    fi
	cd "$srcdir/$pkgname-$pkgver"
}

build() {
    cd "$srcdir/$pkgname-$pkgver"
    mkdir build && cd build
    CXXFLAGS="-Wno-error=class-memaccess"
    cmake ..
    make
}

package() {
	cd "${pkgname}-${pkgver}"
    install -Dm755 "./build/bin/haven-blockchain-export" \
        "${pkgdir}/usr/bin/haven-blockchain-export"
    install -Dm755 "./build/bin/haven-blockchain-import" \
        "${pkgdir}/usr/bin/haven-blockchain-import"
    install -Dm755 "./build/bin/haven-gen-trusted-multisig" \
        "${pkgdir}/usr/bin/haven-gen-trusted-multisig"
    install -Dm755 "./build/bin/haven-wallet-cli" \
        "${pkgdir}/usr/bin/haven-wallet-cli"
    install -Dm755 "./build/bin/haven-wallet-rpc" \
        "${pkgdir}/usr/bin/haven-wallet-rpc"
    install -Dm755 "./build/bin/havend" \
        "${pkgdir}/usr/bin/havend"
    install -Dm644 "./utils/conf/monerod.conf" \
        "${pkgdir}/etc/havend.conf"
    install -Dm644  LICENSE \
        "${pkgdir}/usr/share/licenses/$pkgname/LICENSE"
}
