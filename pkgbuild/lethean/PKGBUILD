# Maintainer: Chris Magyar <c.magyar.ec@gmail.com>

pkgname=lethean
pkgver=3.0.0
_gituser=LetheanMovement
_gitrepo=lethean
_gitver=v3.0.0
pkgrel=1
pkgdesc="Lethean: cryptonote currency daemon, wallet, and miner"
arch=('x86_64' 'i686')
url="https://github.com/$_gituser/$_gitrepo"
license=('custom:Cryptonote')
replaces=('intensecoin')
makedepends=( 'boost' 'cmake' 'git' )
depends=( 'boost-libs' 'libunwind' 'miniupnpc' 'openssl' 'readline'
    'unbound' 'zeromq' )
optdepends=( 'doxygen: documentation'
    'expat: XML parsing'
    'graphviz: documentation'
    'ldns: SSL toolkit' )
checkdepends=('gtest')
source=("$pkgname-$pkgver.tar.gz::$url/archive/$_gitver.tar.gz")
md5sums=('0643451326a82a5fe8325bb098651c6d')

prepare() {
    if [ ! -d "$srcdir/$pkgname-$pkgver" ]; then
        if [ -d "$srcdir/$_gitrepo-$_gitver" ]; then
            mv "$srcdir/$_gitrepo-$_gitver" "$srcdir/$pkgname-$pkgver"
        elif [ -d "$srcdir/$pkgname-$_gitver" ]; then
            mv "$srcdir/$pkgname-$_gitver" "$srcdir/$pkgname-$pkgver"
        fi
    fi
	cd "$srcdir/$pkgname-$pkgver"
}

build() {
    cd "$srcdir/$pkgname-$pkgver"
    mkdir build && cd build
    cmake ..
    make
}

package() {
	cd "${pkgname}-${pkgver}"
    install -Dm755 "./build/bin/lethean-blockchain-export" \
        "${pkgdir}/usr/bin/lethean-blockchain-export"
    install -Dm755 "./build/bin/lethean-blockchain-import" \
        "${pkgdir}/usr/bin/lethean-blockchain-import"
    install -Dm755 "./build/bin/letheand" \
        "${pkgdir}/usr/bin/letheand"
    install -Dm755 "./build/bin/lethean-wallet-cli" \
        "${pkgdir}/usr/bin/lethean-wallet-cli"
    install -Dm755 "./build/bin/lethean-wallet-rpc" \
        "${pkgdir}/usr/bin/lethean-wallet-rpc"
    install -Dm755 "./build/bin/lethean-wallet-vpn-rpc" \
        "${pkgdir}/usr/bin/lethean-wallet-vpn-rpc"
    install -Dm644 ./utils/conf/intensecoind.conf \
        "${pkgdir}/etc/letheand.conf"
    install -Dm644  LICENSE \
        "${pkgdir}/usr/share/licenses/$pkgname/LICENSE"
}
