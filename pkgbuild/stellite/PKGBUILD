# Maintainer: Chris Magyar <c.magyar.ec@gmail.com>
pkgname=stellite
pkgver=1.2.4.4
_gituser=stellitecoin
_gitrepo=Stellite
_gitver=1.2.4.4
pkgrel=1
pkgdesc="Stellite: cryptonote currency daemon, wallet, and miner"
arch=('x86_64' 'i686')
url="https://github.com/$_gituser/$_gitrepo"
license=('custom:Cryptonote')
makedepends=( 'boost=1.66.0' 'cmake' 'git' 'icu=61.1')
depends=( 'boost-libs' 'libunwind' 'miniupnpc' 'openssl' 'readline'
    'unbound' 'zeromq' )
optdepends=( 'doxygen: documentation'
    'expat: XML parsing'
    'graphviz: documentation'
    'ldns: SSL toolkit' )
checkdepends=('gtest')
source=("$pkgname-$pkgver.tar.gz::$url/archive/$_gitver.tar.gz")
md5sums=('7f51418bd3634c84b33715029c55c978')

prepare() {
    if [ ! -d "$srcdir/$pkgname-$pkgver" ]; then
        if [ -d "$srcdir/$_gitrepo-$_gitver" ]; then
            mv "$srcdir/$_gitrepo-$_gitver" "$srcdir/$pkgname-$pkgver"
        elif [ -d "$srcdir/$pkgname-$_gitver" ]; then
            mv "$srcdir/$pkgname-$_gitver" "$srcdir/$pkgname-$pkgver"
        fi
    fi
	cd "$srcdir/$pkgname-$pkgver"
}

build() {
    cd "$srcdir/$pkgname-$pkgver"
    mkdir build && cd build
    cmake ..
    make
}

package() {
	cd "$pkgname-$pkgver"
    install -Dm755 "./build/bin/stellite-blockchain-export" \
        "${pkgdir}/usr/bin/stellite-blockchain-export"
    install -Dm755 "./build/bin/stellite-blockchain-import" \
        "${pkgdir}/usr/bin/stellite-blockchain-import"
    install -Dm755 "./build/bin/stellite-wallet-cli" \
        "${pkgdir}/usr/bin/stellite-wallet-cli"
    install -Dm755 "./build/bin/stellite-wallet-rpc" \
        "${pkgdir}/usr/bin/stellite-wallet-rpc"
    install -Dm755 "./build/bin/stellited" \
        "${pkgdir}/usr/bin/stellited"
    install -Dm644 "./utils/conf/stellited.conf" \
        "${pkgdir}/etc/stellited.conf"
    install -Dm644  LICENSE \
        "${pkgdir}/usr/share/licenses/$pkgname/LICENSE"
}
