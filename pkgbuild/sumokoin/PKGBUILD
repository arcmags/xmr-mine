# Maintainer: Chris Magyar <c.magyar.ec@gmail.com>

pkgname=sumokoin
pkgver=0.4.1.1
_gituser=sumoprojects
_gitrepo=sumokoin
_gitver=v0.4.1.1
pkgrel=1
pkgdesc="Sumokoin: cryptonote currency daemon, wallet, and miner"
arch=('x86_64' 'i686')
url="https://github.com/$_gituser/$_gitrepo"
license=('custom')
makedepends=( 'boost' 'cmake' 'git' )
depends=( 'boost-libs' 'libunwind' 'miniupnpc' 'openssl' 'readline'
    'unbound' 'zeromq' )
optdepends=( 'doxygen: documentation'
    'expat: XML parsing'
    'graphviz: documentation'
    'ldns: SSL toolkit' )
checkdepends=('gtest')
source=("$pkgname-$pkgver.tar.gz::$url/archive/$_gitver.tar.gz")
md5sums=('e0e485c5e23c2bff9153d61b0704cb67')

prepare() {
    if [ ! -d "$srcdir/$pkgname-$pkgver" ]; then
        if [ -d "$srcdir/$_gitrepo-$_gitver" ]; then
            mv "$srcdir/$_gitrepo-$_gitver" "$srcdir/$pkgname-$pkgver"
        elif [ -d "$srcdir/$pkgname-$_gitver" ]; then
            mv "$srcdir/$pkgname-$_gitver" "$srcdir/$pkgname-$pkgver"
        fi
    fi
	cd "$srcdir/$pkgname-$pkgver"
}

build() {
    cd "$srcdir/$pkgname-$pkgver"
    mkdir build && cd build
    #CXXFLAGS="-Wno-error=class-memaccess"
    cmake ..
    make
}

package() {
	cd "$pkgname-$pkgver"
    install -Dm755 "./build/bin/sumo-blockchain-export" \
        "${pkgdir}/usr/bin/sumo-blockchain-export"
    install -Dm755 "./build/bin/sumo-blockchain-import" \
        "${pkgdir}/usr/bin/sumo-blockchain-import"
    install -Dm755 "./build/bin/sumo-wallet-cli" \
        "${pkgdir}/usr/bin/sumo-wallet-cli"
    install -Dm755 "./build/bin/sumo-wallet-rpc" \
        "${pkgdir}/usr/bin/sumo-wallet-rpc"
    install -Dm755 "./build/bin/sumokoind" \
        "${pkgdir}/usr/bin/sumokoind"
    install -Dm644 "./utils/conf/monerod.conf" \
        "${pkgdir}/etc/sumokoind.conf"
    install -Dm644  LICENSE \
        "${pkgdir}/usr/share/licenses/$pkgname/LICENSE"
}
