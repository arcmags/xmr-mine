# Maintainer: Chris Magyar <c.magyar.ec@gmail.com>
pkgname=xmr-stak-cpu-amd
pkgver=2.5.2
pkgrel=1
pkgdesc="Monero CPU miner"
arch=('x86_64')
url='https://github.com/fireice-uk/xmr-stak'
license=('GPL3')
conflicts=('xmr-stak-cpu'
	'xmr-stak-cpu-amd-nvidia'
	'xmr-stak-cpu-nvidia'
    'xmr-stak-git'
    'xmr-stak-cpu-git'
    'xmr-stak-nvidia-git'
    'xmr-stak_cpu')
makedepends=('cmake' 'opencl-headers')
depends=('libmicrohttpd' 'openssl' 'hwloc' 'opencl-amd')
source=("xmr-stak-${pkgver}.tar.gz::$url/archive/${pkgver}.tar.gz"
    'no-donate.patch')
md5sums=('e23757501cb030a0ecd4d7b77fd3bd93'
    '73a3f89510681a2ea5c6b597f3c27589')

prepare() {
    cd "$srcdir/xmr-stak-${pkgver}"
    patch -p1 -i ../no-donate.patch
}

build() {
    cd "$srcdir/xmr-stak-${pkgver}"
    mkdir build
    cd build
    cmake ..  -DCUDA_ENABLE=OFF
    make
}

package() {
    cd "$srcdir/xmr-stak-${pkgver}/build"
    install -D -m755 ./bin/xmr-stak "$pkgdir/usr/bin/xmr-stak"
    install -D -m644 ./bin/libxmrstak_opencl_backend.so \
        "$pkgdir/usr/lib/libxmrstak_opencl_backend.so"
}
