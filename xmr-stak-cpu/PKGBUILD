# Maintainer: Chris Magyar <c.magyar.ec@gmail.com>
pkgname=xmr-stak-cpu
pkgver=2.1.0
pkgrel=1
pkgdesc="Monero CPU miner"
arch=('x86_64')
url='https://github.com/fireice-uk/xmr-stak'
license=('GPL3')
conflicts=('xmr-stak-git')
conflicts=('xmr-stak-cpu-nvidia')
makedepends=('cmake')
depends=('libmicrohttpd' 'openssl' 'hwloc')
source=("xmr-stak-${pkgver}.tar.gz::$url/archive/v${pkgver}.tar.gz"
    'no-donate.patch')
md5sums=('4b8d709980c8a14b8e74d47ae4a21d30'
    'dcaf327fcbc4baebf9e0c8d98c76f787')

prepare() {
    cd "$srcdir/xmr-stak-${pkgver}"
    patch -p1 -i ../no-donate.patch
}

build() {
    cd "$srcdir/xmr-stak-${pkgver}"
    cmake . \
        -DXMR-STAK_CURRENCY=monero \
        -DOpenCL_ENABLE=OFF \
        -DCUDA_ENABLE=OFF
    make
}

package() {
    cd "$srcdir/xmr-stak-${pkgver}"
    install -D -m755 ./bin/xmr-stak "$pkgdir/usr/bin/xmr-stak"
}
